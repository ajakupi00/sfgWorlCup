<Window x:Class="OOP_WPF.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_WPF"
        mc:Ignorable="d"
         Title="World Cup 2018" Height="600" Width="400"
        Icon="/Icon/trophy.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <Label Content="Language:"/>
            <Button x:Name="btnLanguage" Height="25" Content="Engleski"/>
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <Label Content="World cup gender:"/>
            <ComboBox x:Name="cbSex"/>
        </StackPanel>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <Label Content="Screen resolution:"/>
            <ComboBox x:Name="cbResolution"/>
        </StackPanel>
    </Grid>
</Window>