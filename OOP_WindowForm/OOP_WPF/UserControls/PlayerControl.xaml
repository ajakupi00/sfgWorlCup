<UserControl x:Class="OOP_WPF.UserControls.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOP_WPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="205" d:DesignWidth="165">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </UserControl.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1.25*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>
        <Image Source="/Icon/football-player.png" HorizontalAlignment="Center" x:Name="image" Height="115" />
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Neymar Dos Santos Jr."  HorizontalAlignment="Center"  x:Name="lblName" />
            <TextBlock Text="00" HorizontalAlignment="Center"  x:Name="lblNumber" FontWeight="Bold" FontSize="20"  />
        </StackPanel>
    </Grid>

</UserControl>
